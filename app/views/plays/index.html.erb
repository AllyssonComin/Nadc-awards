<div id="background-home">
  <div class="container title-vid mb-5">
    <div class="nav d-flex justify-content-between">
      <%= link_to "Home Page", root_path, class: "btn-home"%>
    </div>
    <% if @plays.empty? %>
      <p>No plays yet</p>
      <%= link_to "Send your favorite play", new_play_path, class: "btn btn-primary"%>
    <% else %>
      <% @plays.each do |play| %>
        <ul>Game:<%= play.game %></ul>
        <ul>Category: <%= play.category %></ul>
        <ul>Title: <%= play.title %></ul>
        <ul><iframe width="560" height="315" src=<%="https://www.youtube.com/embed/#{play.video}" %> title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></iframe></ul>
        <ul><%= link_to "See more", play_path(play.id), class: "btn-home"%></ul>
        <% end %>
    <% end %>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<script>
VANTA.NET({
  el: "#background-home",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00,
  backgroundColor: 0x120b22,
  points: 15.00,
  maxDistance: 29.00,
  spacing: 20.00
})
</script>
